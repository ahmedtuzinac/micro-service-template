# PostgreSQL Configuration
# Copy this file to .env and customize values

# PostgreSQL Host - use IP address of your PostgreSQL server
# For local PostgreSQL: localhost
# For remote PostgreSQL: IP address (e.g., 192.168.1.100)
# For Docker containers to access host PostgreSQL: host.docker.internal
POSTGRES_HOST=host.docker.internal

# PostgreSQL Port
POSTGRES_PORT=5432

# PostgreSQL Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Database Naming Convention
# Databases will be named: basify_{service_name}_db
# Examples: basify_user_db, basify_product_db, basify_order_db
DB_PREFIX=basify

# Docker Build Performance
# Enable Docker Bake for faster parallel builds (requires Docker 20.10+)
# When true: make build/up-build automatically use Docker Bake
# When false: use standard docker-compose build
COMPOSE_BAKE=true

# Service Communication
# Environment: local (services on localhost) or docker (services in containers)
ENVIRONMENT=docker

# Service Client Configuration
SERVICE_CLIENT_TIMEOUT=5.0         # Request timeout in seconds
SERVICE_CLIENT_MAX_RETRIES=3       # Maximum retry attempts
SERVICE_CLIENT_RETRY_DELAY=1.0     # Base delay between retries (exponential backoff)

# Individual Service URLs (optional - overrides auto-discovery)
# USER_SERVICE_URL=http://localhost:8001
# ORDER_SERVICE_URL=http://localhost:8002
# FLOW_SERVICE_URL=http://localhost:8004